<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop.UI</title>
    <link href="~/lib/bulma-0.9.0/css/bulma.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="container">
            <div class="navbar-brand">
                <a class="navbar-item" asp-page="/Index">
                    <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
                </a>

                <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarBasicExample" class="navbar-menu">
                <div class="navbar-start">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="navbar-item" asp-page="/Admin/Index">Admin</a>
                    }

                </div>

                <div class="navbar-end">
                    <div class="navbar-item">
                        <div class="buttons">
                            <vc:cart view="Small"></vc:cart>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="button is-light" asp-controller="/Accounts" asp-action="Logout">
                                    Sign Out
                                </a>
                            }
                            else
                            {
                                <a class="button is-light" asp-page="/Accounts/Login">
                                    Sign in
                                </a>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="content has-text-centered">
            <p>Copy Rights at Shop, <a asp-page="Admin/">Admin Login</a></p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
