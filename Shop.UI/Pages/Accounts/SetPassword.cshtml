@page
@model Shop.UI.Pages.Accounts.SetPasswordModel
@{
}


<section class="hero is-fullheight">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-5-tablet is-4-desktop is-3-widescreen">

                    <form method="post">
                        <input asp-for="Input.UserId" hidden required />
                        <input asp-for="Input.Code" hidden required />

                        <div class="field">
                            <label for="" class="label">New Password</label>
                            <div class="control has-icons-left">
                                <input type="password" placeholder="*******" class="input" asp-for="Input.Password" required>
                                <span class="icon is-small is-left">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </div>
                        </div>

                        <div class="field">
                            <input class="button is-success" type="submit" name="name" value="Submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>